# Environment
NODE_ENV=development
PORT=3000

# Supabase Configuration
Database password=real-estate-agent
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxx.supabase.co:5432/postgres

# WhatsApp (360dialog) Configuration
WHATSAPP_ACCESS_TOKEN=your-360dialog-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret-for-signature-validation
WHATSAPP_API_URL=https://waba.360dialog.io/v1

# WhatsApp Rate Limiting (based on your tier)
# Tier 1: 80 messages/second, 600/minute, 10000/hour
# Tier 2: 200 messages/second, 1200/minute, 25000/hour
# Adjust based on your WhatsApp Business API tier
WHATSAPP_MAX_MESSAGES_PER_SECOND=80
WHATSAPP_MAX_MESSAGES_PER_MINUTE=600
WHATSAPP_MAX_MESSAGES_PER_HOUR=10000

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Application Settings
APP_BASE_URL=http://localhost:3000
WEBHOOK_PATH=/webhook/whatsapp

# JWT Secret (for agent authentication)
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
IDLE_CHECK_INTERVAL_MINUTES=5
MAX_MESSAGE_HISTORY=20

# Queue Configuration (Bull + Redis)
QUEUE_CONCURRENCY=5
REDIS_URL=redis://localhost:6379

# Agent Configuration (for MVP - single agent)
DEFAULT_AGENT_ID=default-agent

# AI Configuration
MAX_TOKENS=150
AI_TEMPERATURE=0.7

# Logging
LOG_LEVEL=info

